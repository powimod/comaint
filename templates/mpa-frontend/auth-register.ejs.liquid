{% liquid 
	assign authObject = project.objects | where: 'name',  project.attributes.auth_object | first
	assign authIdentProp = authObject.properties | where: 'name', project.attributes.auth_ident_property | first
	assign authPasswordProp = authObject.properties | where: 'name', project.attributes.auth_password_property | first
%}
		<h2>Registration</h2>

		<% if (typeof error !== 'undefined') { %>
			<p>Error : <%= error %></p>
		<% } %>

		<form action="/register" method="POST" >
			<div>
				<label for="{{authIdentProp.name|snakeCase}}">{{authIdentProp.name|pascalCase}}</label>
				<input id="{{authIdentProp.name|snakeCase}}" name="{{authIdentProp.name|snakeCase}}" type="text"/>
			</div>
			<div>
				<label for="{{authPasswordProp.name|snakeCase}}">Password</label>
				<input id="{{authPasswordProp.name|snakeCase}}" name="{{authPasswordProp.name|snakeCase}}" type="password"/>
			</div>
			<div>
				<input type="submit" value="Next"/>
			<div>
		</form>
		<a href="/">Home</a>

