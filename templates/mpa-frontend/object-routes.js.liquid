		if (result.ok) {
			view.renderPage('{{object.name | kebabCase}}-details',  response, {
				{{object.name | camelCase}}: result.{{object.name | camelCase}}
			});
		}
		else {
			view.renderPage('error',  response, {
				message: result.error
			});
		}
	});


}

