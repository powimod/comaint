'use strict'

class View {
	renderPage(templateName, response, params) {
		console.log(`Rendering page ${templateName}`);
		let layoutParams = (params !== null) ? params : [];
		layoutParams.template = templateName;
		response.render('layout', layoutParams);
	}
}

class ViewSingleton {
	constructor() {
		throw new Error('Can not instanciate singleton object!');
	}
	static getInstance() {
		if (! ViewSingleton.instance)
			ViewSingleton.instance = new View();
		return ViewSingleton.instance;
	}
}

module.exports = ViewSingleton;
