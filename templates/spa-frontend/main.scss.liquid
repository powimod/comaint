{% render "../../templates/license_header_scss.liquid",
		project     : project.attributes.spa_frontend_project_name,
  		description : project.attributes.spa_frontend_project_description,
		authors     : project.attributes.authors,
		copyright   : project.attributes.copyright,
		filename    : 'main.scss'
		%}
$screen-size-tiny: 480px;
$screen-size-small: 640px;
$screen-size-medium: 800px;
$screen-size-large : 1024px;

@use 'global';
@use 'palette-icon';
@use 'dialog';
@use 'header' with (
	$screen-width-limit-tiny: $screen-size-tiny,
	$screen-width-limit-small: $screen-size-small
);
@use 'footer' with (
	$screen-width-limit-small: $screen-size-small,
	$screen-width-limit-medium: $screen-size-medium
);
@use 'login-dialog';
@use 'create-account-dialog';
@use 'accessibility-dialog';

main {
	padding : 1rem;
	background-color: var(--main-background-color);
	color: var(--main-first-text-color);
}

main h1 {
	margin-top:0.8rem;
	margin-bottom:0.2rem;
	color: var(--main-first-title-color);
	font-family: 'One';
	font-size: 2.5rem;
}

main h2 {
	margin-top:1.5rem;
	margin-bottom:0.8rem;
	color: var(--main-second-title-color);
	font-family: 'Russo One';
	font-size: 2.2rem;
}

main h3 {
	margin-top:1.1rem;
	margin-left:2rem;
	margin-bottom:0.6rem;
	color: var(--main-second-title-color);
	font-family: 'Russo One';
	font-size: 1.8rem;
}


main p {
	margin: 0.5rem;
	font-size: 1.8rem;
}

main ul {
	margin-left: 2rem;
}
main ol {
	margin-left: 2rem;
}
main li {
	margin-left: 2rem;
	padding: 0.2rem;
	font-size: 1.8rem;
}
