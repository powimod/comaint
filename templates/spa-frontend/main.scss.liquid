{% render "../../templates/license_header_scss.liquid",
		project     : project.attributes.spa_frontend_project_name,
  		description : project.attributes.spa_frontend_project_description,
		authors     : project.attributes.authors,
		copyright   : project.attributes.copyright,
		filename    : 'main.scss'
		%}
@use 'global';
@use 'palette-icon';
@use 'dialog';
@use 'header' with (
	$screen-width-limit-medium: 400px
);
@use 'footer' with (
	$screen-width-limit-medium: 400px
);
@use 'login-dialog';
@use 'create-account-dialog';

main {
	padding : 1rem;
}

main h1 {
	margin-top:0.8rem;
	margin-bottom:0.2rem;
	color: #104992; 
	background-color: var(--global-color-2);
	font-size: 2.5rem;
}

main h2 {
	margin-top:1.5rem;
	margin-bottom:0.8rem;
	color: #104992; 
	background-color: var(--global-color-2);
	font-size: 2.2rem;
}
main p {
	color: black;
	margin: 0.5rem;
	font-size: 1.8rem;
}

main ul {
	margin-left: 1rem;
}
main li {
	margin-left: 2rem;
	padding: 0.2rem;
	font-size: 1.8rem;
}
