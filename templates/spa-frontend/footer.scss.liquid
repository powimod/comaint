{% render "../common/license_header_scss.liquid",
		project     : project.attributes.spa_frontend_project_name,
  		description : project.attributes.spa_frontend_project_description,
		authors     : project.attributes.authors,
		copyright   : project.attributes.copyright,
		filename    : 'Footer.scss'
		%}
$screen-width-limit-small: 0px !default;
$screen-width-limit-medium: 0px !default;

footer {
	display: grid;
	grid-template-areas: 
		"links links"
		"copyright copyright"
		"concept   concept";
	background-color: var(--banner-background-color);
	color: var(--banner-first-text-color);
	padding: 0.5rem;
	ul {
		grid-area: links;
		display: flex;
		flex-direction: column;
		padding: 0.2rem;
		li {
			margin-left: 3rem;
			list-style: circle;
			padding: 1rem;
			a {
				color: var(--banner-link-color);
				text-decoration: none;
			}
			a:hover {
				color: var(--banner-link-hover-color);
			}
		}
	}
	p {
		margin:0.5rem;
	}
	p.copyright {
		grid-area: copyright;
	}
	p.concept {
		grid-area: concept;
	}
	@media (min-width: $screen-width-limit-small)  {
		grid-template-areas: 
			"links links"
			"copyright concept";
		ul {
			flex-direction: row;
		}
		
		p.concept {
			justify-self: end;
		}
	}
}
