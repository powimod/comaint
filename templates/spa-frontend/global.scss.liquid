{% render "../../templates/license_header_scss.liquid",
		project     : project.attributes.spa_frontend_project_name,
  		description : project.attributes.spa_frontend_project_description,
		authors     : project.attributes.authors,
		copyright   : project.attributes.copyright,
		filename    : 'global.scss'
		%}

*{
        box-sizing: border-box;
        margin: 0;
	padding: 0;
	font-size: 1.5rem;

}
:root {
	--global-color-1: #104992; /* dark blue */
	--global-color-2: white; /* white */
	--header-background-color: var(--global-color-1);
	--header-text-color: var(--global-color-2);
}
html {
        font-size: 62.5%;
	height:100%; /* move footer at the bottom of the window */
}
body {
	background-color: var(--global-color-2);
	min-height: 100vh;
	display:grid;
	/* grid-template-columns: 1cm minmax(1fr, 800px) 1cm ; FIXME generate an error */
	grid-template-rows: auto 1fr auto; /* header / content / footer */
	grid-template-areas: ". header ."
	                     ". main   ."
	                     ". footer .";
	background-color: #323232;
	font-family: 'Roboto';
}


body header {
	grid-area: header;
}
body main {
	grid-area: main;
	background-color: white;
	overflow:scroll;
}
body footer {
	grid-area: footer;
}

label {
	padding: 0.3rem;
}
input {
	padding: 0.3rem;
}
button {
	padding: 0.3rem 1rem;
}

.error-message {
	font-weight: bolder;
	color: red;
	padding: 0.2rem;
}
