*{
        box-sizing: border-box;
        margin: 0;
	padding: 0;
	font-size: 1.5rem;
}
:root {
	--global-color-1: #104992; /* dark blue */
	--global-color-2: white; /* white */
	--header-background-color: var(--global-color-1);
	--header-text-color: var(--global-color-2);
}
html {
        font-size: 62.5%;
}
body{
	background-color: var(--global-color-2);
}


