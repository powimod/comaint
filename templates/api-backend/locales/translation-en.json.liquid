{% liquid 
	assign authObject = project.objects | where: 'name',  project.attributes.auth_object | first
	assign authIdentProp = authObject.properties | where: 'name', project.attributes.auth_ident_property | first
	assign authPasswordProp = authObject.properties | where: 'name', project.attributes.auth_password_property | first
%}
{
	"general": {
		"loading": "Loading..."
	},
	"error": {
		{% raw %}"invalid_data": "Invalid {{object}}!",{% endraw %}
		{% raw %}"empty_data": "The '{{object}}' field is empty !",{% endraw %}
		{% raw %}"too_short_data": "The '{{object}} field is to short!",{% endraw %}
		{% raw %}"too_long_data": "The '{{object}} field is to long!",{% endraw %}
		"account_locked": "Account is locked",
		"account_not_locked": "Account is not locked",
		"account_not_found": "This account does not exist",
		"invalid_account_ident": "Unknown {{authIdentProp.name|PascalCase}} or invalid {{authPasswordProp.name}}"
	},
	"register": {
		"account_already_exists" : "An account with this {{authIdentProp.name}} already exists",
		{% raw %}"mail_body": "Hello,\nYour validation code for the creation of an account is {{code}}.\nIf your are not the initiator of this request, simply ignore this message",{% endraw %}
		"mail_title": "{{project.attributes.company}} registration"
	}
}
